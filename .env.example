# Database
DATABASE_URL="postgresql://username:password@localhost:5432/luciddreams"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Service
EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
EMAIL_FROM="noreply@luciddreams.com"

# OpenAI API (for dream interpretation)
OPENAI_API_KEY="your-openai-api-key"

# Upload Service
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# Analytics
GOOGLE_ANALYTICS_ID="your-ga-id"

# Feature Flags
NEXT_PUBLIC_ENABLE_DREAM_SHARING=true
NEXT_PUBLIC_ENABLE_AI_INTERPRETATION=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true